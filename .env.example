# Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
# Use 'sqlite' for easy setup (default) or 'postgres' for production
DB_DIALECT=sqlite
DB_PATH=data/payments.db

# PostgreSQL Configuration (if using postgres)
DATABASE_URL=postgresql://username:password@localhost:5432/payments
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payments
DB_USER=username
DB_PASSWORD=password

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Business Configuration
BUSINESS_NAME=BOOM Payment Gateway
BUSINESS_EMAIL=admin@boom-payments.com
BUSINESS_PHONE=+1-555-0123
BUSINESS_ADDRESS=123 Payment Street, Finance City, FC 12345

# Payment Settings
CURRENCY=USD
PAYMENT_MODE=development
CVV_REQUIRED=false
MIN_AMOUNT=0.01
MAX_AMOUNT=999999.99
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1
# CORS_ORIGIN supports multiple origins separated by commas
# Use * for all origins in development (NOT recommended for production)
# Examples: http://localhost:3000,https://yourdomain.com,http://192.168.1.100:3000
CORS_ORIGIN=http://localhost:3000,https://localhost:3000,*
# API Keys for external access (comma-separated)
API_KEYS=boom-api-key-dev,boom-api-key-prod

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-change-this
WEBHOOK_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_DEBUG=true